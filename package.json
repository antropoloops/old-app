{
  "private": true,
  "workspaces": ["modules/*"],
  "scripts": {
    "start":
      "concurrently \"yarn start:server\" \"yarn start:webapp\" \"yarn start:app-control\" ",
    "start:webapp": "(cd modules/webapp && yarn start -y)",
    "start:app-control": "(cd modules/app-control && yarn start -y)",
    "start:server": "(cd modules/server && yarn start)",
    "deploy": "(cd modules/webapp && yarn deploy)",
    "format": "prettier --write  \"modules/**/src/**/*.{js,json}\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css}": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1"
  }
}
